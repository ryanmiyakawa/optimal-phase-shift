
grating = zeros(1, N);
region1 = false(1, N);
region2 = false(1, N);
for i = 1:8
    if mod(i, 4) == 1
        region1 = (x >= boundaries(i) & x <= boundaries(i+1));
        E1 = E0*(exp(1i*(2*pi*L)/lambda));
        grating(region1) = E1;
    elseif mod(i, 4) == 2
        region2a = region2 | (x >= boundaries(i) & x <= boundaries(i+1));
        x2 = abs(x(region2a)-((i/4)*pitch-(2*d*tand(6))));
        path2a = abs(((L.*sind(6))-x2./(sind(6)))); 
        path2b = (L - path2a);
        E2 = E0.*exp(1i.*(((2.*pi.*path2a)./lambda)+((2.*pi.*path2b.*n2)./lambda))).*exp(-((2.*pi.*beta).*path2b)./lambda);
        grating(region2a) = E2;
    else 
        disp('whoops something went wrong');
    end
end

a = linspace(1, 100, 100);
b = [0];
for i = 1:10
    b = [b, 10*i];
end

cOdd = false(1, 100);
cEven = false(1, 100);
smth = zeros(1, 100);
for i = 1:10
    if mod(i, 2) == 1
        cOdd1 = (a >= b(i) & a <= b(i+1));
        smth(cOdd1) = (i*2);
    elseif mod(i, 2) == 0
        cEven1 = a >= b(i) & a <= b(i+1);
        smth(cEven1) = (i*2);
    else
        disp('somethings not right')
    end
end